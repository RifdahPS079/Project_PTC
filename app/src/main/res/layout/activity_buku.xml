<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".BukuActivity">

    <!-- Header Layout -->
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/skygreen"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:src="@drawable/back"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppinssemibold"
            android:gravity="center"
            android:text="Buku Panduan"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </LinearLayout>

    <!-- Title Text -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsbold"
        android:text="Panduan pintar mengenal sampah"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Description Layout -->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:text="Sampah adalah sisa buangan dari kegiatan manusia atau proses alam yang berbentuk padat atau semi padat. Sampah dapat berasal dari berbagai sumber, seperti rumah tangga, pertanian, perkantoran, perusahaan, dan rumah sakit."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:text="Buku ini menyediakan panduan memahami jenis-jenis sampah, cara memilah, serta pengelolaan yang efektif dan ramah lingkungan. Dengan panduan langkah demi langkah, pembaca dapat lebih sadar tentang peran penting mereka dalam menjaga kebersihan dan kesehatan lingkungan."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="italic" />
    </LinearLayout>

    <!-- Buttons -->
    <Button
        android:id="@+id/btn_organik"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/organik"
        android:fontFamily="@font/poppinsbold"
        android:text="Sampah Organik"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_Anorganik"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/anorganik"
        android:fontFamily="@font/poppinsbold"
        android:text="Sampah Anorganik"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btn_organik"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_B3"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/B3"
        android:fontFamily="@font/poppinsbold"
        android:text="Sampah B3"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btn_Anorganik"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_Daur"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/Daurulang"
        android:fontFamily="@font/poppinsbold"
        android:text="Sampah Daur Ulang"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btn_B3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_Elektronik"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/Elektronik"
        android:fontFamily="@font/poppinsbold"
        android:text="Sampah Elektronik"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btn_Daur"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
