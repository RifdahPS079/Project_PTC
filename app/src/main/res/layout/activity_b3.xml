<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".B3Activity">

    <!-- Header Layout -->
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/skygreen"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:src="@drawable/back"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppinssemibold"
            android:gravity="center"
            android:text="Sampah B3"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="274dp"
        android:layout_height="172dp"
        android:layout_marginTop="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/b3" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView">

        <!-- Description Text (TextView 3) -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Sampah B3 adalah jenis sampah yang mengandung bahan kimia berbahaya atau beracun yang berpotensi merusak lingkungan dan membahayakan kesehatan manusia jika tidak dikelola dengan benar. Contoh: Baterai, lampu neon, obat-obatan kadaluarsa, pestisida, cairan pembersih kimia, dan produk lain yang mengandung bahan kimia berbahaya."
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <!-- Additional Information Text (TextView 4) -->
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppinsregular"
            android:text="cara memilah:\n 1.  Sampah B3 harus dipisahkan secara khusus dan diberi label sesuai jenis\n     bahaya yang dimilikinya.\n 2. Gunakan wadah khusus yang kedap dan tahan bocor untuk menyimpan\n     sampah ini sampai dapat dibuang di fasilitas pengelolaan yang sesuai."
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsregular"
            android:text="Metode Pengolahan:  Sampah B3 harus diolah di fasilitas khusus yang mematuhi standar keselamatan dan lingkungan. Proses pengolahannya biasanya melibatkan pemusnahan dengan pembakaran di suhu tinggi, stabilisasi kimia, atau pembuangan di tempat pembuangan akhir yang dirancang khusus untuk bahan berbahaya."
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppinsbold"
            android:text="DAMPAK SAMPAH JIKA TIDAK DIOLAH:\n • Pencemaran Lingkungan: Zat beracun dari sampah B3, seperti logam\n    berat, mencemari udara, tanah, dan air, merusak ekosistem\n • Bahaya Kesehatan: Paparan sampah B3 dapat menyebabkan\n    keracunan, gangguan pernapasan, hingga kanker.\n • Rantai Makanan: Racun dari sampah B3 terakumulasi, mengancam\n    hewan dan manusia melalui rantai makanan."
            android:textAlignment="textStart"
            android:textColor="@color/B3"
            android:textSize="10sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>